if(!function_exists('active')) {
    function active($page)
    {
        $ret = false;
        if ($page->isActive()) {
            $ret = true;
        }
        if (count($page->getPages())) {
            foreach ($page->getPages() as $subPage) {
                if (count($subPage->getPages())) {
                    if (active($subPage)) {
                        $ret = true;
                    }
                }
                if ($subPage->isActive()) {
                    $ret = true;
                }
            }
        }

        return $ret;
    }
}

if(!function_exists('gen')) {
    function gen($page, $level = 1)
