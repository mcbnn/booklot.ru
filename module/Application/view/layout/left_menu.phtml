                    ."'><i class='".$subPage->getClass()."'></i>"
                    .$subPage->getLabel();


                $lit = gen($subPage, $level);
                if (!empty($lit)) {
                    if ($level < 4) {


                        $li .= "<span ttt = '".$level
                            ."' onclick = 'window.location = \""
                            .$subPage->getHref()
                            ."\"'  class='mylink'><i class='entypo-link'></i></span></a>";
                        $li .= gen($subPage, $level);
                    } else {

                        $li .= "</a>";
                        $li .= gen($subPage, $level);

                    }


                } else {
                    $li .= "</a>";
                }
                $li .= "</li>";
            }
            $li .= "</ul>";
        }


        return $li;

    }
}

